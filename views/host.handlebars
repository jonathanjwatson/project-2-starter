{{> navbar}}
<div class="container">
    <div class="row">
        <div class="col d-flex justify-content-end pt-4">
            <a href="/player/new">
                <button class="btn btn-primary">New Player</button>
            </a>

        </div>
    </div>
    <div class="row">
        <div class="col">
            {{#each players}}
            <h1>{{firstName}} {{lastName}}</h1>
            <p>Reach me at: {{email}} or {{phone}}</p>
            <button class="btn btn-danger delete-player" data-id="{{id}}">Delete</button>
            <a href="/players/{{id}}/edit"><button class="btn btn-secondary">Edit</button></a>
            {{/each}}
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $(".delete-player").on("click", function () {
            const id = $(this).data("id");
            $.ajax({
                method: "DELETE",
                url: `/api/players/${id}`
            }).then(response => {
                window.location.reload();
            })
        })
    })
</script>